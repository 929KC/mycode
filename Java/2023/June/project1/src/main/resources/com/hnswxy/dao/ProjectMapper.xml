<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hnswxy.dao.ProjectMapper">
    <!--查询 -->
    <select id="queryProject" resultType="com.hnswxy.pojo.Project">
        select * from t_project
    </select>
    <!--添加 -->
    <insert id="addProject" parameterType="com.hnswxy.pojo.Project">
        insert t_project(projectId,projectName,deputyName,telephone,addr) values
        (#{projectId},#{projectName},#{deputyName},#{telephone},#{addr})
    </insert>
    <!--修改-->
    <update id="updateProject" parameterType="com.hnswxy.pojo.Project">
         update t_project set projectName = #{projectName},
        deputyName = #{deputyName},telephone = #{telephone},addr = #{addr} where projectId=#{projectId}
    </update>
    <!--删除-->
    <delete id="deleteProject" parameterType="String">
        delete from t_project where projectId=#{projectId}
    </delete>
</mapper>